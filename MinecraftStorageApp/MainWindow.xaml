<Window x:Class="MinecraftStorageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftStorageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Minecraft Storage Manager"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

            <Button Name="ScanButton"
                Content="Scan Base"
                Height="40"
                Margin="0,0,0,10"
                Click="ScanButton_Click"/>

            <Button Name="ExportButton"
                Content="Export to Excel"
                Height="40"
                Margin="0,0,0,10"
                Click="ExportButton_Click"/>

            <Button Name="SyncButton"
                Content="Sync to Google Sheets"
                Height="40"
                Margin="0,0,0,20"
                Click="SyncButton_Click"/>
            <ProgressBar Name="ScanProgressBar"
             Height="20"
             Minimum="0"
             Maximum="100"
             Margin="0,0,0,10"/>
            <TextBlock Name="StatusText"
                   Text="Status: Ready"
                   FontSize="14"/>
            
        </StackPanel>
    </Grid>
</Window>
