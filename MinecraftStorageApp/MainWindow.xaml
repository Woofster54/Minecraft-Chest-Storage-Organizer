<Window x:Class="MinecraftStorageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftStorageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Margin="20">
        <StackPanel>
            <Button Content="Settings"
        Height="35"
        Click="Settings_Click"
        Margin="0,10,0,0"/>
            <TextBlock Text="Minecraft Storage Manager"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
            <TextBlock Text="Search Item"
           FontWeight="Bold"
           Margin="0,0,0,5"/>

            <ComboBox Name="SearchBox"
          IsEditable="True"
          IsTextSearchEnabled="True"
          Height="30"
          Margin="0,0,0,5"
          SelectionChanged="SearchBox_SelectionChanged"/>

            <TextBlock Name="SearchResultText"
           FontSize="16"
           FontWeight="Bold"
           Margin="0,0,0,20"/>
            <Button Name="ScanButton"
                Content="Scan Base"
                Height="40"
                Margin="0,0,0,10"
                Click="ScanButton_Click"/>

            <ProgressBar Name="ScanProgressBar"
             Height="20"
             Minimum="0"
             Maximum="100"
             Margin="0,0,0,10"/>
            <TextBlock Name="StatusText"
                   Text="Status: Ready"
                   FontSize="14"/>
            <TextBlock Name="ChestNumber"
           Text="Chests not Scanned"
                       FontSize="14"/>
            <TextBlock Text="Inventory Changes"
           FontWeight="Bold"
           Margin="0,20,0,5"/>

            <ListBox Name="ChangesList"
         Height="120"/>


            <TextBlock Text="Top 5 Most Common Items"
           FontWeight="Bold"
           Margin="0,20,0,5"/>

            <ListBox Name="TopFiveList"
         Height="120"/>
            <TextBlock Text="⚠ Low Priority Items"
           FontWeight="Bold"
           Margin="0,20,0,5"/>

            <ListBox Name="LowPriorityList"
         Height="100"
                     SelectionChanged="LowPriorityList_SelectionChanged"/>
            



        </StackPanel>
    </Grid>
</Window>
